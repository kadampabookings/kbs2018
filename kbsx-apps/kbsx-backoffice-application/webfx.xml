<?xml version="1.0" encoding="UTF-8"?>
<project applicationId="org.kadampabookings.kbsx.backoffice" applicationLabel="KBSX">

    <exported-packages>
        <source-packages/>
    </exported-packages>

    <dependencies>
        <used-by-source-modules/>

        <!-- Allow configuration variables from environment in Java executables (OpenJFX or Gluon) -->
        <plugin-module executable-target="java">webfx-platform-substitution-var-env-plugin</plugin-module>
        <!-- Allow configuration variables from local storage in GWT executables -->
        <plugin-module executable-target="gwt">webfx-platform-substitution-var-localstorage-plugin</plugin-module>
        <plugin-module executable-target="gwt">webfx-platform-substitution-var-windowlocation-plugin</plugin-module>

        <plugin-module>modality-base-backoffice-application</plugin-module>
        <!-- mainly for login UI -->
        <plugin-module>modality-crm-client-min-plugin</plugin-module>

        <!-- Base activities -->
        <plugin-module>modality-base-backoffice-max-plugin</plugin-module>

        <!-- CRM activities -->
        <plugin-module>kbsx-crm-backoffice-activities-all</plugin-module>

        <!-- Ecommerce activities -->
        <plugin-module>kbsx-ecommerce-backoffice-activities-all</plugin-module>

        <!-- Hotel activities -->
        <plugin-module>kbsx-hotel-backoffice-activities-roomsgraphic</plugin-module>

        <!-- Event activities -->
        <plugin-module>kbsx-event-backoffice-activities-all</plugin-module>

        <!-- Catering activities -->
        <plugin-module>modality-catering-backoffice-max-plugin</plugin-module>

    </dependencies>

</project>