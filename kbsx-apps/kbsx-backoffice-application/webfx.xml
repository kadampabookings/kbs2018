<?xml version="1.0" encoding="UTF-8"?>
<project applicationId="org.kadampabookings.kbsx.backoffice" applicationLabel="KBSX">

    <exported-packages>
        <source-packages/>
    </exported-packages>

    <providers>
        <provider interface="javafx.application.Application">org.kadampabookings.kbsx.backoffice.KbsExperimentalBackOfficeApplication</provider>
    </providers>

    <dependencies>
        <used-by-source-modules/>

        <!-- Allow configuration variables from environment in Java executables (OpenJFX or Gluon) -->
        <plugin-module executable-target="java">webfx-stack-conf-env-java</plugin-module>

        <!-- Base activities -->
        <plugin-module>modality-base-backoffice-activities-all</plugin-module>

        <!-- CRM activities -->
        <plugin-module>kbsx-crm-backoffice-activities-all</plugin-module>

        <!-- Ecommerce activities -->
        <plugin-module>kbsx-ecommerce-backoffice-activities-all</plugin-module>

        <!-- Hotel activities -->
        <plugin-module>kbsx-hotel-backoffice-activities-roomsgraphic</plugin-module>

        <!-- Event activities -->
        <plugin-module>kbsx-event-backoffice-activities-all</plugin-module>

        <!-- Catering activities -->
        <plugin-module>modality-catering-backoffice-activities-all</plugin-module>

    </dependencies>

</project>